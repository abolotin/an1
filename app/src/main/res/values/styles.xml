<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.AppTheme.ToolButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">@dimen/button_size_square</item>
        <item name="android:minHeight">@dimen/button_size_square</item>
    </style>
    <style name="Widget.AppTheme.IconButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingStart">@dimen/icon_button_padding</item>
        <item name="android:paddingEnd">@dimen/icon_button_padding</item>
        <item name="android:minWidth">@dimen/icon_button_min_size</item>
        <item name="android:minHeight">@dimen/icon_button_min_size</item>
    </style>
    <style name="Widget.AppTheme.LikeCheckBox"
        parent="Widget.AppTheme.ToolButton">
        <item name="iconTint">@color/red</item>
    </style>
    <style name="Widget.AppTheme.MenuButton"
        parent="Widget.AppTheme.ToolButton">
        <item name="android:paddingRight">0dp</item>
    </style>
</resources>